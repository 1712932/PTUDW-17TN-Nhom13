<section class="text-gray-700 body-font">
    <div class="container px-5 py-24 mx-auto">
        <div class="lg:w-4/5 mx-auto flex flex-wrap">
            <img alt="ecommerce" class="lg:w-1/2 w-full lg:h-auto h-64 rounded"
                src="{{cover}}" />
            <div class="lg:w-1/2 w-full lg:pl-10 lg:py-6 mb-6 lg:mb-0">
                <h2 class="text-sm title-font text-gray-500 tracking-widest">
                    {{author}}
                </h2>
                <h1 class="text-gray-900 text-3xl title-font font-medium mb-4">
                    {{title}}
                </h1>
                <div class="flex mb-4 book__detail-tabs">
                    {{>book.detail.tab tabName='Description'}}
                    {{>book.detail.tab tabName='Details'}}
                </div>
                <div class="book__detail-content relative">
                    <p class="book__desc leading-relaxed mb-4">
                        {{desc}}
                    </p>
                    {{>book.detail.list this}}
                </div>
                <div class="flex">
                    <span class="title-font font-medium text-2xl text-gray-900">
                        Số lượng: {{amount}}
                    </span>
                    <button
                        class="flex ml-auto text-white bg-indigo-500 border-0 py-2 px-6 focus:outline-none hover:bg-indigo-600 rounded">
                        Mượn
                    </button>
                    <button
                        class="rounded-full w-10 h-10 bg-gray-200 p-0 border-0 inline-flex items-center justify-center text-gray-500 ml-4">
                        <svg fill="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            class="w-5 h-5" viewBox="0 0 24 24">
                            <path
                                d="M20.84 4.61a5.5 5.5 0 00-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 00-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 000-7.78z">
                            </path>
                        </svg>
                    </button>
                </div>
            </div>
            
        </div>
    </div>
</section>