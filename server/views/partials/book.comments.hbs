<div class="container px-6 py-12 mx-auto">
    <div class="flex flex-wrap w-full">
        <div class="lg:w-1/2 w-full mb-6 lg:mb-0">
            <h1 class="sm:text-3xl text-2xl font-medium title-font mb-2 text-gray-900">Nhận xét của bạn đọc</h1>
            <div class="h-1 w-40 bg-indigo-500 rounded"></div>
        </div>
    </div>

    {{#if user }}
    <div class="flex flex-wrap w-full md:w-8/12 lg:w-6/12 mt-4 mb-20">
        <div class="ml-1 mr-8 xs:ml-0">
            <img src="{{user.profilePicture}}" alt="your profile picture" class="rounded-full h-12 w-12 mb-2 md:mb-0">
        </div>

        <div class="book__comment-form-container flex-grow">
            <form action="/books/{{bookId}}/comments/create" method="post" class="flex flex-wrap">
                <textarea class="w-full border px-4 py-2 rounded hover:shadow" name="content"
                    placeholder="Phản hồi công khai..."></textarea>
                <input type="hidden" name="userId" value="{{user.id}}">
                <button type="submit" class="" value="Gửi">Gửi</button>
            </form>
        </div>
    </div>
    {{/if}}
    <div class="mt-24 lg:mt-16 sm:mt-10 body-font">
        {{#each comments}}
        {{>book.comment this root=true bookId=../book.id currentUser=../user}}
        {{/each}}
    </div>
</div>