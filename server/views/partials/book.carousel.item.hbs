<div class="bg-gray-100 lg:p-4">
    <div class="h-full p-2 rounded-lg lg:p-6">
        <img class="h-auto rounded mb-2 lg:mb-6" src="{{cover}}" alt="{{title}}">
        <h3 class="book-carousel__author hover:underline text-indigo-500 text-xs font-medium 
            lg:tracking-loose ">
            <a href="#">{{author}}</a>
        </h3>
        <h2 class="book-carousel__title hover:underline mb-2 leading-none text-sm text-gray-900 
            font-medium lg:text-lg lg:mb-2 lg:leading-normal xl:mb-4">
            <a href="/books/{{id}}">{{title}}</a>
        </h2>
        <p class="book-carousel__desc hidden lg:leading-relaxed lg:text-base">
            {{desc}}
        </p>
    </div>
</div>